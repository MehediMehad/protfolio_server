generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String         @id @default(auto()) @map("_id") @db.ObjectId
  email      String         @unique
  name       String
  image      String?
  provider   JoinedProvider
  providerId String
  joinedAt   DateTime       @default(now())

  @@map("users")
}

enum JoinedProvider {
  google
  github
  facebook
}
