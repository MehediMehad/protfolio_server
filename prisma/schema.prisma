generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String             @id @default(auto()) @map("_id") @db.ObjectId
  email      String             @unique
  name       String
  image      String?
  provider   JoinedProviderEnum
  role       RoleEnum           @default(USER)
  status     UserStatusEnum     @default(ACTIVE)
  providerId String
  joinedAt   DateTime           @default(now())

  meetings Meeting[]

  @@map("users")
}

model Project {
  id                String               @id @default(auto()) @map("_id") @db.ObjectId
  title             String
  subtitle          String
  description       String
  overview          String
  type              ProjectTypeEnum
  category          ProjectCategoryEnum // e.g. full-stack, frontend, backend, mobile
  status            ProjectStatusEnum // e.g. "In Progress", "Completed"
  technologies      String[] // e.g. ["React", "Node.js", "MongoDB"]
  features          String[] // e.g. ["User authentication", "Real-time chat", "Responsive design"]
  rolesFeatures     TUserRoleFeature[]
  highlights        TProjectHighlights[]
  image             String
  liveUrl           String
  frontendGitHubUrl String
  backendGitHubUrl  String
  isDeleted         Boolean              @default(false)
  isFeatured        Boolean              @default(false)
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  @@map("projects")
}

type TUserRoleFeature {
  role     String // Customer, Admin, Contributor, etc.
  features String[] // e.g. ["Browse and search products", "Add items to cart", "Secure checkout with Stripe"]
}

type TProjectHighlights {
  title       String
  description String
}

enum ProjectTypeEnum {
  personal
  team
  open_source
  commercial
  large_scale

  ai
  machine_learning
  deep_learning
  data_science
  computer_vision
  generative_ai
  automation
  research
  prototype
}

enum ProjectCategoryEnum {
  full_stack
  frontend
  backend
  mobile
}

enum ProjectStatusEnum {
  IN_PROGRESS
  COMPLETED
}

model Meeting {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  platform    MeetingPlatformEnum // e.g., zoom, google_meet
  link        String
  agenda      AgendaEnum // e.g., Important, Networking, Casual, Opportunity
  status      MeetingStatusEnum   @default(PENDING) // e.g., PENDING, ACCEPTED, REJECTED
  isDeleted   Boolean             @default(false)
  userId      String              @db.ObjectId
  user        User                @relation(fields: [userId], references: [id])
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@map("meetings")
}

enum JoinedProviderEnum {
  google
  github
  facebook
}

enum RoleEnum {
  USER
  ADMIN
}

enum MeetingPlatformEnum {
  zoom
  google_meet
}

enum AgendaEnum {
  Important
  Networking
  Casual
  Opportunity
}

enum MeetingStatusEnum {
  PENDING
  ACCEPTED
  REJECTED
}

enum UserStatusEnum {
  ACTIVE
  BLOCKED
}
