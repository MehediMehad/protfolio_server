generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String             @id @default(auto()) @map("_id") @db.ObjectId
  email      String             @unique
  name       String
  image      String?
  provider   JoinedProviderEnum
  role       RoleEnum           @default(USER)
  status     UserStatusEnum     @default(ACTIVE)
  providerId String
  joinedAt   DateTime           @default(now())

  meetings Meeting[]

  @@map("users")
}

model Meeting {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  platform    MeetingPlatformEnum // e.g., zoom, google_meet
  link        String
  agenda      AgendaEnum // e.g., Important, Networking, Casual, Opportunity
  status      MeetingStatusEnum   @default(PENDING) // e.g., PENDING, ACCEPTED, REJECTED
  isDeleted   Boolean             @default(false)
  userId      String              @db.ObjectId
  user        User                @relation(fields: [userId], references: [id])
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@map("meetings")
}

enum JoinedProviderEnum {
  google
  github
  facebook
}

enum RoleEnum {
  USER
  ADMIN
}

enum MeetingPlatformEnum {
  zoom
  google_meet
}

enum AgendaEnum {
  Important
  Networking
  Casual
  Opportunity
}

enum MeetingStatusEnum {
  PENDING
  ACCEPTED
  REJECTED
}

enum UserStatusEnum {
  ACTIVE
  BLOCKED
}
