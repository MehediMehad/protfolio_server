generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String             @id @default(auto()) @map("_id") @db.ObjectId
  email      String             @unique
  name       String
  image      String?
  provider   JoinedProviderEnum
  role       RoleEnum           @default(USER)
  status     UserStatusEnum     @default(ACTIVE)
  providerId String
  joinedAt   DateTime           @default(now())

  meetings  Meeting[]
  schedules Schedule[]

  @@map("users")
}

model Schedule {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  adminId String @db.ObjectId
  admin   User   @relation(fields: [adminId], references: [id])

  date      DateTime // specific date of the schedule
  startTime DateTime // available start time
  endTime   DateTime // available end time
  isBooked  Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  meeting   Meeting?

  @@unique([date, startTime, endTime], name: "unique_schedule_slot")
  @@map("schedules")
}

model Meeting {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  platform    MeetingPlatformEnum // e.g., zoom, google_meet
  link        String
  userId      String              @db.ObjectId
  user        User                @relation(fields: [userId], references: [id])
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  scheduleId String?   @unique @db.ObjectId
  schedule   Schedule? @relation(fields: [scheduleId], references: [id])

  @@map("meetings")
}

enum JoinedProviderEnum {
  google
  github
  facebook
}

enum RoleEnum {
  USER
  ADMIN
}

enum MeetingPlatformEnum {
  zoom
  google_meet
}

enum UserStatusEnum {
  ACTIVE
  BLOCKED
}
